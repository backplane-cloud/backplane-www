---
// @ts-ignore
import { Icon } from "astro-icon/components";

const benefits = [


  {
    title: "Avoid Lock-in",
    description:
      "Easily connect your Cloud Service Providers and deploy your workloads seamlessly, with the flexibility to move them between platforms effortlessly.",
    icon: "bx:bxs-lock-open-alt",

  },
  {
    title: "Drive Cost Efficiency",
    description:
      "Cloud is about delivering value and optimising cloud spend. Backplane's API offers complete cost visibility across workloads and cloud platforms, ensuring you maximize the value of your cloud investment",
    icon: "bx:bx-line-chart-down",

  },
  {
    title: "Optimise Workload Placement",
    description:
      "Deploy your workload in the most effective Cloud Platform to meet your business requirements.",
    icon: "bx:bx-current-location",

  },
  

]

---
 
<div class="mt-16 md:mt-0 p-0">
  <div>
    <h2 class="text-4xl lg:text-4xl font-bold lg:tracking-tight">Manage multiple clouds with a single API</h2>
  </div>    
  <div class="grid sm:grid-cols-2 md:grid-cols-3 mt-8 gap-16">

    { benefits.map((benefit) => (
      <div class="ml-0 grid sm:grid-cols-2 md:grid-cols-1 mt-8 gap-16 w-96">
        <div class="flex gap-4 items-start">
          <div class="mt-1 bg-indigo-700 rounded-full  p-2 w-12 h-12 shrink-0">
            <Icon class='text-slate-100 w-8 h-8' name={benefit.icon} />
          </div>
          <div>
            <h3 class="font-semibold text-lg">{benefit.title}</h3>
            <p class="text-slate-500 mt-2 leading-relaxed">{benefit.description}</p>
          </div>
        </div>
      </div>
    ))}
    
  </div>
</div>