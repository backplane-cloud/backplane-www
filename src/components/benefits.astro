---
// @ts-ignore
import { Icon } from "astro-icon/components";
import Logos from "@components/logos.astro";

const benefits = [


  {
    title: "Eliminate Vendor Lock-in",
    description:
    "Connect to multiple Cloud Service Providers to deploy your cloud workloads seamlessly with Backplane. Providing your organisation with the flexibility to more easily move workloads between cloud platforms",
    icon: "bx:bxs-lock-open-alt",

  },
  {
    title: "Reduce Cloud Spend",
    description:
      "Backplane provides total cost transparency across cloud workloads in your organisation, helping drive better cost efficiency and utilisation. Enabling a greater focus towards delivering business value",
    icon: "bx:bx-line-chart-down",

  },
  {
    title: "Increase Business Value",
    description:
      "With intelligent workload placement, you can deploy workloads in the most cost-efficient cloud platform, driving better cost-efficiency and business value",
    icon: "bx:bx-current-location",

  },
  {
    title: "Remove Complexity",
    description:
      "With a single integration point to cloud you can simplify and reduce integration time. Helping to speed-up business value delivery",
    icon: "bx:bx-time",

  },
  {
    title: "Increase Developer Productivity",
    description:
      "Development teams can spend less time on Cloud Integration. Enabling more focus on higher value features across existing tools ",
    icon: "bx:bx-up-arrow",

  },
  {
    title: "Become Cloud Native",
    description:
      "Cloud transformations need strong multi-cloud governance. With Backplane you can adopt, enable and govern faster and accelerate cloud-native transformations.",
    icon: "bx:bx-flag",

  },
  

]

---
 
<div class="mt-16 md:mt-0 p-0">
  <div>
    <h2 class="text-4xl lg:text-4xl font-bold lg:tracking-tight" id="benefits">
    Simplifying Multi-Cloud adoption
      </h2>
      <p class="text-lg mt-5 text-slate-600">

      </p>
    </div>    
  <div class="grid sm:grid-cols-2 md:grid-cols-3 mt-8 gap-16">

    { benefits.map((benefit) => (
      <div class="ml-0 grid sm:grid-cols-2 md:grid-cols-1 mt-8 gap-16 w-96">
        <div class="flex gap-4 items-start">
          <div class="mt-1 bg-indigo-700 rounded-full  p-2 w-12 h-12 shrink-0">
            <Icon class='text-slate-100 w-8 h-8' name={benefit.icon} />
          </div>
          <div>
            <h3 class="font-semibold text-lg">{benefit.title}</h3>
            <p class="text-slate-500 mt-2 leading-relaxed">{benefit.description}</p>
          </div>
        </div>
      </div>
    ))}
    
  </div>
  <div class="w-full justify-center flex">
    <a href="/benefits" class="inline-flex items-center mt-5 px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 ">View all benefits <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
    </svg></a>
  </div>

</div>
